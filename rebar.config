{erl_opts, [
    debug_info,
    warn_unused_vars,
    warn_unused_imports,
    warn_unused_functions,
    warn_shadow_vars,
    warn_export_all,
    warn_bif_clash,
    warnings_as_errors
]}.
{deps, [
    {cowboy, "2.12.0"},
    {jiffy, "1.1.2"},
    {bbmustache, "1.12.2"}
]}.
{relx, [
    {release, {whackamole, "0.1.0"}, [
        whackamole,
        sasl
    ]},
    {dev_mode, true},
    {include_src, true},
    {include_erts, false}
]}.
{profiles, [
    {prod, [
        {erl_opts, [optimize, warnings_as_errors]},
        {relx, [
            {dev_mode, false},
            {include_erts, true},
            {include_src, false}
        ]}
    ]}
]}.
{shell, [
    {apps, [whackamole]}
]}.
